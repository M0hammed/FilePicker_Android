<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCapture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:gravity="center_vertical|start"
            android:text="@string/capture"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCaptureArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCaptureArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnCapturePhoto"
        android:layout_width="@dimen/pick_btn_width"
        android:layout_height="wrap_content"
        android:text="@string/capture_photo"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btnRecordVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecordVideo"
        android:layout_width="@dimen/pick_btn_width"
        android:layout_height="wrap_content"
        android:text="@string/record_video"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/btnCapturePhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/captureFlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_9"
        android:visibility="gone"
        app:constraint_referenced_ids="btnCapturePhoto,btnRecordVideo"
        app:layout_constraintTop_toBottomOf="@id/layoutCapture" />
</androidx.constraintlayout.widget.ConstraintLayout>