<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingStart="@dimen/margin_15"
    android:paddingTop="@dimen/margin_15"
    android:paddingEnd="@dimen/margin_15">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCapturePhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/capture_photo"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRecordVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/record_video"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@id/btnPickFiles"
            app:layout_constraintStart_toEndOf="@id/btnCapturePhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPickFiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pick_files"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnRecordVideo"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            app:layout_constraintTop_toBottomOf="@id/btnPickFiles" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>